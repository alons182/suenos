@import "nib"
@import "normalize.styl"
@import "icons.styl"
@import "tables.styl"

verde = #98ba33
morado = #372f4a
gris = #787878
gris2 = #eae8e7
rojo = #d53c21
body
	font-family 'Open Sans', sans-serif
	font-size 16px
	line-height 30px
	background url('../img/bg.jpg')

ul
	margin 0
	padding 0

a
	text-decoration none
	color morado
	&:hover
		color verde

h1
	color verde
h2
	color morado
figure
	margin 0
textarea.form-control
	height 90px
.img
	border 1px solid gris2
	padding .2em
header
	width 100%
	height 100px
	background #FFF
	color #F4E5BE

footer
	border-top 1px solid gris2
	padding-bottom 2em

.inner
	margin 0 auto
	max-width 1000px
	position relative

.header-top
	background #FFF
	height 33px
	border-bottom 1px solid gris2
	color gris
	a
		display inline-block
		color gris
		line-height 33px

		&:hover
			color verde

			i
				background morado
	i
		color #FFF
		background verde
		border-radius 50%
		margin-right 5px
.links-index
	background gris
	a
		display inline-block
		font-size 13px
		padding 0 .5em
		color #FFF
		border-right 1px solid #FFF

		&:last-child
			border-right none
.login-register
	display none
	background #FFF
	padding .5em
	position absolute
	left 0
	top 34px
	z-index 99
	box-shadow 0 0 5px rgba(0, 0, 0, .5)
	width 250px

	h1
		margin .5em 0
		font-size 1.5em
		text-align center
		text-transform uppercase

.logo
	display block
	float left
	font-size 3em
	line-height 100px
	color morado
	span
		color verde

.search
.cart
	float right
	margin-top 2em

.search
	position relative
	margin-right 2.5em
	i
		position absolute
		right - 38px
		background verde
		color #FFF
		padding .55em .7em

.cart
	margin-right 3em

	.img-cart
		float left
		margin-right .8em
	.btn-cart
		//font-weight 700
		font-size 14px
		color morado
		span
			color verde

.menu
	background morado

	li
		display inline-block
		vertical-align top
		border-left 1px solid #5a5369
		position relative

		span
		a
			color #FF
			border-top 3px solid morado
			cursor pointer
			display block
			padding .5em

			&:hover
				border-color verde

	.store
		background verde
		span
		a
			border-top 3px solid verde
	.sub-menu
		position absolute
		display none
		width 150px
		left -5px
		top 50px
		padding 21px 20px 29px 20px
		list-style none !important
		zoom: 1
		z-index 102
		background morado
		margin 0
		border-top 4px solid verde
		box-shadow 0px 0px 5px rgba(0, 0, 0, .75)

		li
			display block

			a
				border none

				&:hover
					color verde



.wrapp
	max-width 1000px
	margin 1.5em auto
	padding 1em
	background #FFF
	border 1px solid gris2

.section-top
	border-bottom 1px solid gris2
	padding 1em 0


.section-bottom
	border-top 1px solid gris2
	padding 1em 0

.main
	min-height 400px
	overflow: hidden
	margin-bottom 20px
	position relative
.contact-address
	text-align center
	margin-bottom 10px

small
	font-weight 400
	font-size 16px
	color #FFF
	padding .3em
	background morado
.featured-products
	margin-bottom 1em
	h1
		background verde
		color #FFF
		padding .3em
		font-weight 400

	.product
		width 240px
		display inline-block

		.min-description
			font-size 13px
		.price
			color verde
			margin-bottom 1em
		img
			width 100%
	figure
		border 1px solid gris2

.box-info
	display inline-block
	vertical-align top
	width 288px
	height 158px
	background red
	margin-right .8em
	background-position center center
	background-repeat no-repeat
	background-size cover, cover
	color #FFF
	padding 1em
	position relative

	h1
		text-transform uppercase
		font-weight 700
		font-size 1.8em
		margin-top 0
		color #FFFFFF

		.light
			font-size 18px
			font-weight 400
	i
		position absolute
		bottom .6em
		right .6em
		font-size 1.5em
		background #FFF
		color morado
		border-radius 50%

.familia
	background-image url('../img/img-info.jpg')

.canasta
	background-image url('../img/img-info2.jpg')

.ingresos
	background-image url('../img/img-info3.jpg')
	margin-right 0

.shipping
.online
.gift
	display inline-block
	vertical-align top
	width 288px
	height 50px
	background red
	margin-right .8em
	color #FFF
	padding 1em
	position relative
	text-transform uppercase
	text-align center
	line-height 25px

.shipping
	background verde

.online
	border 5px solid gris2
	background #FFF
	color morado
	width 278px
	height 40px

.gift
	background morado
	margin-right 0

.column
	display inline-block
	vertical-align top
	margin-right 2.5em
	width 200px

	h2
		text-transform uppercase
		color morado
		font-size 1em
	ul
		list-style none
	li
		padding-left 1.2em
		&:before
			content '\e605'
			font-family piramide
			margin-left - 1.2em /*same as padding-left set on li*/
			color #FFF
			background verde
			border-radius 50%
			vertical-align middle
			margin-right .5em
		a
			color morado
			font-size 14px

			&:hover
				color verde

.column-contact
	margin-right 0
	width 250px

	p
		font-size 14px

.redes
	a
		display inline-block
		color gris
		padding 0 .3em

		&:hover
			color verde

.copyright
	font-size 14px
	a

		color morado
	i
		font-size 4em
		vertical-align middle
		margin-top - 17px
		margin-right 5px
		float left

.btn
	box-shadow 1px 1px 2px rgba(0, 0, 0, .5)
	padding .5em 1em
	color #FFF
	background gris
	border 0

.btn-primary
.btn-purple
	background morado
	&:hover
		background verde
		color #FFF

.form-group
	margin-bottom 10px

	label
		display inline-block
		margin-bottom 5px

.form-control
	display: block;
	width: 100%;
	height: 34px;
	padding: 6px 12px;
	font-size: 14px;
	line-height: 1.42857143;
	border 1px solid #e5e5e5
	box-shadow inset 1px 2px 10px rgba(0, 0, 0, .1)
	color morado
	outline-color verde
	box-sizing border-box

.txt-center
	text-align center

.ul-letters
	margin-left 20px
	padding-left 15px
	list-style-type lower-latin
	li
		margin-bottom 10px
.col-1
.col-2
	float left
	width 45%
	position relative
	min-height: 1px
	padding-left: 15px
	padding-right: 15px
.well
	clear: both
	padding 0 15px
.label-warning
	background verde
	color #FFFFFF
	font-size 13px
	padding .2em
.alert
	padding .5em
	background #E3E3E3
	color morado
	.close
		float right
		background morado
		border none
		color #FFF
.alert-info
	background verde
	color #FFFFFF
.alert-danger
	background rojo
	color #FFF
.pagination
	li
		display: inline-block
		vertical-align top
		span
		a
			display: block
			padding .5em
			border 1px solid gris2
			&:hover
				background morado
				color #FFF
	.active
		span
			background verde !important
			color #FFF
.payments-table
	font-size 13px
	margin-top 20px
.gains-container
	position: absolute
	right 0
	top 0

	small
		display: block

.gains
	background verde
	padding .5em
	h2
		font-size .9em
		margin-top 0
		margin-bottom 0
		color #FFF
		font-weight normal
	.amount
		font-weight bold
.months
	position absolute
	right 3px
	top 3px

@import "responsive.styl"	

